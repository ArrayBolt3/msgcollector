folder_init() {
   msgcollector_run_dir="/run/user/$(id -u)/msgcollector"
   if ! test -d "${msgcollector_run_dir}" ; then
      mkdir --parents "${msgcollector_run_dir}"
   fi
}

loop_protection() {
   trap "error_handler" ERR

   prot="$(( $prot + 1 ))"
   if [ $prot -gt "60" ]; then
      exit 2
   fi
}
