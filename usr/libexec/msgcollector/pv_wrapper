#!/bin/bash

## Copyright (C) 2012 - 2023 ENCRYPTED SUPPORT LP <adrelanos@whonix.org>
## See the file COPYING for copying conditions.

if [ "$pv_wrapper_debug" = "true" ]; then
   set -x
fi

true "$0: START"

set -e
set -o nounset
set -o pipefail

while read -r line; do
   percent="$line"
   eval $pv_echo_command
   eval $pv_wrapper_command
done

true "$0: END"
